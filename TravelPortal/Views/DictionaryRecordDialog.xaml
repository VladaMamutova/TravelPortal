        xmlns:viewModels="clr-namespace:TravelPortal.ViewModels"
        mc:Ignorable="d"
        FontSize="14"
        Title="DictionaryRecordWindow" SizeToContent="Height" ResizeMode="NoResize" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen">
