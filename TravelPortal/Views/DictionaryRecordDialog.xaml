                <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
                    --><!--<Binding.ValidationRules>
                        <viewModels:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                    </Binding.ValidationRules>--><!--
                </Binding>
            </TextBox.Text>
        </TextBox>-->
