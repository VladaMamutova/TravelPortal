                 Margin="0 8 0 0"
                 FontSize="16" Grid.Row="2">
            <TextBox.Text>
                <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <viewModels:IntegerValidationRule ValidatesOnTargetUpdated="True" />
                    </Binding.ValidationRules>
                </Binding>
                </TextBox.Text>
        </TextBox>-->
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10 20 10 10" HorizontalAlignment="Right">
            <Button Content="{Binding Path=CommandText}" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}"
                    Command="{Binding Command}">
            </Button>
            <Button Content="ОТМЕНА" IsCancel="True" Margin="10 0 0 0" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding Path=CloseCommand}" CommandParameter="{Binding ElementName=Window}"/>
        </StackPanel>
    </Grid>
</Window>
